<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".grouplist.GroupsOnlineDetailActivity">


    <TextView
        android:text="온랑니 모임"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <ScrollView
        android:id="@+id/hobbyScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backButton"
        android:layout_above="@id/participateButton"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/groupsRoomImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/groupsOnlineRoomTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/groupsRoomImageView"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@id/groupsOnlineRoomDescriptionTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/groupsRoomImageView"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="영화 보실 분" />

            <TextView
                android:id="@+id/groupsOnlineRoomManagerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/groupsOnlineRoomTitleTextView"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/groupsOnlineRoomCreateAtTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/groupsOnlineRoomTitleTextView"
                tools:text="임원정" />

            <TextView
                android:id="@+id/groupsOnlineRoomCreateAtTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/groupsOnlineRoomManagerTextView"
                android:layout_alignEnd="@id/groupsOnlineRoomManagerTextView"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/groupsOnlineRoomManagerTextView"
                tools:text="2021.10.12" />


            <TextView
                android:id="@+id/groupsOnlineRoomDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/groupsOnlineRoomTitleTextView"
                android:layout_alignStart="@id/groupsOnlineRoomTitleTextView"
                android:lines="4"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="같이 영화보고 쇼핑할 사람 구해요" />


        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/participateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="함께하기" />


</RelativeLayout>